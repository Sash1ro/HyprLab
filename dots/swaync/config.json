{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "notification-window-preferred-output": "DP-2",
  "positionX": "right",
  "positionY": "top",
  "cssPriority": "user",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "control-center-width": 375,
  "control-center-margin-top": 10,
  "control-center-margin-bottom": 15,
  "control-center-margin-right": 10,
  "control-center-margin-left": 0,
  "notification-window-width": 320,
  "notification-icon-size": 50,
  "notification-body-image-height": 200,
  "notification-body-image-width": 200,
  "timeout": 8,
  "ignore-gtk-theme": true,
  "timeout-low": 6,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "text-empty": "Aucune Notifications",
  "script-fail-notify": true,
  "widgets": [
    "title",
    "buttons-grid",
    "volume",
    "dnd",
    "notifications",
    "mpris"
  ],
  "widget-config": {
    "mpris": {
      "image-radius": 0,
      "autohide": true,
      "blacklist": [
        "firefox",
        "playerctl"
      ]
    },
    "volume": {
      "label": " 󰕾 ",
      "expand-button-label": " ",
      "collapse-button-label": " ",
      "show-per-app": true,
      "show-per-app-icon": true,
      "show-per-app-label": false
    },
    "dnd": {
      "text": "Ne pas déranger"
    },
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": " 󰆴 "
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "",
          "type": "toggle",
          "active": true,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
          "update-command": "sh -c '[[ $(nmcli r wifi) == \"enabled\" ]] && echo true || echo false'"
        },
        
        {
          "label": "󰂯",
          "type": "toggle",
          "active": true,
          "command": "sh -c '~/.config/hyprlab/scripts/toggleBluetooth.sh'",
          "update-command": "sh -c '~/.config/hyprlab/scripts/toggleBluetooth.sh status'"
        },

        {
          "label": "",
          "type": "toggle",
          "active": false,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && pactl set-source-mute @DEFAULT_SOURCE@ 1 || pactl set-source-mute @DEFAULT_SOURCE@ 0'",
          "update-command": "sh -c '[[ $(pactl get-source-mute @DEFAULT_SOURCE@) == *yes* ]] && echo true || echo false'"
        },
        {
          "label": "󰌁",
          "type": "toggle",
          "active": false,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && ~/.config/hyprlab/scripts/toggleVibrant.sh on || ~/.config/hyprlab/scripts/toggleVibrant.sh off '",
          "update-command": "sh -c '~/.config/hyprlab/scripts/toggleVibrant.sh status'"
        }
      ]
    }
  }
}

